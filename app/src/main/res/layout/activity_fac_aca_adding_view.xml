<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.socialsportz.Activities.Facility.Fragments.BookingFragment">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/top_img_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/top_bg"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name" />

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="@dimen/step_view_width"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:sv_animationType="All"
            app:sv_doneCircleColor="@color/colorPrimary"
            app:sv_doneCircleRadius="@dimen/margin_10dp"
            app:sv_doneStepLineColor="@color/colorPrimary"
            app:sv_doneStepMarkColor="@color/white"
            app:sv_nextStepCircleColor="@color/light_grey"
            app:sv_nextStepCircleEnabled="true"
            app:sv_nextStepLineColor="@color/dark_grey"
            app:sv_nextTextColor="@color/dim_grey"
            app:sv_selectedCircleColor="@color/colorPrimary"
            app:sv_selectedCircleRadius="@dimen/margin_10dp"
            app:sv_selectedStepNumberColor="@color/white"
            app:sv_selectedTextColor="@color/white"
            app:sv_stepLineWidth="1dp"
            app:sv_stepNumberTextSize="@dimen/text_size_small"
            app:sv_stepPadding="@dimen/margin_3dp"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_typeface="@font/roboto_medium"
            android:layout_marginBottom="@dimen/margin_start_vary_10"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:layout_marginTop="@dimen/margin_vary_minus_20"
        android:background="@drawable/canvas_event_listing_top_two_cr"
        android:focusableInTouchMode="true">

        <com.socialsportz.Utils.CustomViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


</RelativeLayout>






