<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#E4E4E4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:background="@drawable/canvas_red_gradient">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:background="@null"
			android:layout_centerVertical="true"
			android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_desc"
            android:src="@drawable/ic_keyboard_arrow_left_white"
            android:tint="@color/white" />

        <com.socialsportz.View.PMTextView
            android:id="@+id/tv_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/ib_back"
			android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="@string/edit_profile"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

		<ImageView
			android:id="@+id/img"
			android:layout_width="@dimen/_70sdp"
			android:layout_height="@dimen/_50sdp"
			android:layout_marginLeft="@dimen/_10sdp"
			android:layout_gravity="right"
			android:layout_alignParentEnd="true"
			android:layout_marginBottom="@dimen/_5sdp"
			android:layout_marginTop="@dimen/_5sdp"
			android:src="@drawable/logo"
			android:contentDescription="@string/app_desc"></ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_toolbar"
        android:background="@drawable/canvas_red_gradient">

        <FrameLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <RelativeLayout
				android:layout_width="@dimen/_80sdp"
				android:layout_height="@dimen/_80sdp"
                android:background="@drawable/canvas_white_round_bg"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="@dimen/_10sdp"
				android:layout_marginBottom="@dimen/_10sdp"
                android:elevation="@dimen/margin_3dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_img"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bt_edit_profile"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/canvas_white_round_bg"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_45sdp"
                android:elevation="@dimen/margin_3dp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/gallery"
                    android:tint="@color/user_theme_color"/>

            </RelativeLayout>

        </FrameLayout>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_start_vary_20">

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/theme_color"
                android:padding="@dimen/margin_start_vary_5">

                <ImageButton
                    android:id="@+id/ib_back"
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="@dimen/margin_40dp"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_desc"
                    android:src="@drawable/ic_navigate_before_black"
                    android:tint="@color/white" />

                <com.vibescom.socialsportz.View.PMTextView
                    android:id="@+id/tv_page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/edit_profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xxlarge" />
            </LinearLayout>-->

            <com.socialsportz.View.PMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/full_name"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black_semi_transparent"/>
            <com.socialsportz.View.PMEditText
                android:id="@+id/et_full_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="@string/name"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/canvas_white_bg_user_et"/>
            <com.socialsportz.View.PMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/email_id_hint"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black_semi_transparent"/>
            <com.socialsportz.View.PMEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="@string/mail_txt"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/canvas_white_bg_user_et"/>
            <com.socialsportz.View.PMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/address"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black_semi_transparent"/>
            <com.socialsportz.View.PMEditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="@string/address_hint"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:inputType="text"
				android:focusable="false"
                android:textColor="@color/black"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical"
				android:drawableStart="@drawable/ic_location_on_black_18dp"
				android:drawablePadding="@dimen/_2sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/canvas_white_bg_user_et"/>
            <com.socialsportz.View.PMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/phone_hint"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black_semi_transparent"/>
            <com.socialsportz.View.PMEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="@string/mobile_number"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/canvas_white_bg_user_et"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_20sdp"
				android:layout_marginTop="@dimen/_10sdp"
				android:layout_marginEnd="@dimen/_20sdp"
				>
            <com.socialsportz.View.PMTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_centerVertical="true"
			android:text="@string/gender"
			android:textSize="@dimen/_10sdp"
			android:textColor="@color/black_semi_transparent"/>


			<com.socialsportz.View.PMTextView
				android:id="@+id/tv_changePassword"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:text="@string/change_password"
				android:textSize="@dimen/_12sdp"
				android:textColor="@color/black_semi_transparent"/>

			</RelativeLayout>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp">
                <RadioButton
                    android:id="@+id/radio_btn_male"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:text="@string/male_text"
                    android:textColor="@color/dim_grey"
                    android:buttonTint="@color/theme_color"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/canvas_white_bg_user_et"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"/>
                <RadioButton
                    android:id="@+id/radio_btn_female"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:text="@string/female_text"
                    android:textColor="@color/dim_grey"
                    android:textSize="@dimen/_12sdp"
                    android:buttonTint="@color/theme_color"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/canvas_white_bg_user_et"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"/>
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_vary_20"
                android:layout_marginEnd="@dimen/margin_start_vary_20"
                android:layout_marginTop="@dimen/margin_start_vary_10"
                android:orientation="horizontal"
                android:visibility="gone">
                <CheckBox
                    android:id="@+id/chk_box"
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="@dimen/margin_40dp"
                    android:buttonTint="@color/white"
                    android:layout_gravity="center_vertical"
                    android:checked="false"/>
                <com.socialsportz.View.PMTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terms"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_size_regular"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/margin_start_vary_2"
                    android:layout_gravity="center_vertical">
                    <com.socialsportz.View.PMTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/conditions"
                        android:textSize="@dimen/text_size_regular"
                        android:textColor="@color/theme_color"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/theme_color"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_create"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/canvas_red_bg_user_et"
                android:text="@string/save_text"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
