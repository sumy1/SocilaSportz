<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:scrollbars="none"
	android:overScrollMode="never"
	android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/logo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_name"
                android:src="@drawable/style_welcome" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logo" />

            <com.socialsportz.View.PMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_started"
                android:textColor="@color/light_red"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>


		<androidx.cardview.widget.CardView
			android:id="@+id/cv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/_35sdp"
			android:layout_marginEnd="@dimen/_35sdp"
			android:visibility="gone"
			android:layout_gravity="center"
			android:layout_marginBottom="@dimen/_10sdp"
			app:cardBackgroundColor="@color/black_light_transparentt"
			app:cardCornerRadius="@dimen/_5sdp"
			app:elevation="@dimen/_5sdp"
			>

			<LinearLayout
				android:id="@+id/btn_layoutt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:layout_marginStart="@dimen/_35sdp"
				android:layout_marginEnd="@dimen/_35sdp">

				<com.socialsportz.View.PMButton
					android:id="@+id/btn_login_with_palyer"
					android:layout_width="match_parent"
					android:layout_height="@dimen/_40sdp"
					android:background="@drawable/canvas_signin_btn_bg"
					android:text="@string/login_as_player"
					android:textColor="@color/white"
					android:layout_marginTop="@dimen/_15sdp"
					android:textAllCaps="false"
					android:textSize="@dimen/_12sdp"/>



				<com.socialsportz.View.PMButton
					android:id="@+id/btn_login_with_partner"
					android:layout_width="match_parent"
					android:layout_height="@dimen/_40sdp"
					android:layout_marginTop="@dimen/_15sdp"
					android:layout_marginBottom="@dimen/_10sdp"
					android:background="@drawable/canvas_signup_advance_bg"
					android:text="@string/login_as_patner"
					android:textColor="@color/white"
					android:textAllCaps="false"
					android:textSize="@dimen/_12sdp"/>

			</LinearLayout>


		</androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
			android:visibility="visible"
            android:focusableInTouchMode="true"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp">


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
            <com.socialsportz.View.PMButton
                android:id="@+id/btn_signIn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/canvas_signin_btn_bg"
                android:text="@string/signin_text"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/_12sdp"/>

            <com.socialsportz.View.PMButton
                android:id="@+id/btn_signUp_user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/canvas_signup_normal_bg"
                android:text="@string/signup_user_text"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/_12sdp"/>

			<com.socialsportz.View.PMButton
				android:id="@+id/btn_signUp_owner"
				android:layout_width="match_parent"
				android:layout_height="@dimen/_40sdp"
				android:layout_marginTop="@dimen/_15sdp"
				android:layout_marginBottom="@dimen/_10sdp"
				android:background="@drawable/canvas_signup_advance_bg"
				android:text="@string/signup_owner_text"
				android:textColor="@color/white"
				android:textAllCaps="false"
				android:textSize="@dimen/_12sdp"/>
			</LinearLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
