<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_start_vary_10"
    android:background="@drawable/canvas_booking_details_img_bg">


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp">
    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginStart="@dimen/margin_start_vary_10"
		android:layout_alignParentStart="true"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_sport"
            android:layout_width="@dimen/margin_20dp"
            android:layout_height="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:layout_gravity="center"
            android:src="@drawable/football_image"/>
        <com.socialsportz.View.PMTextView
            android:id="@+id/tv_sport_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/football"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_regular" />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/slot_batch_edit_btn"
            android:layout_width="@dimen/margin_20dp"
            android:layout_height="@dimen/margin_20dp"
            android:layout_marginStart="@dimen/margin_3dp"
            android:background="@null"
            android:padding="@dimen/margin_3dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_edit"
            android:tint="@color/theme_color" />
    </LinearLayout>

		<LinearLayout
			android:id="@+id/profile_layoutt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:paddingLeft="@dimen/margin_start_vary_5"
			android:paddingRight="@dimen/margin_start_vary_5"
			android:background="@drawable/canvas_light_green_shape_rectangle"
			android:layout_marginEnd="@dimen/margin_start_vary_10"
			android:layout_alignParentEnd="true"
			android:orientation="horizontal">
			<com.socialsportz.View.PMTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/margin_5dp"
				android:text="Status:"
				android:gravity="center_vertical"
				android:textColor="@color/dim_grey"
				android:textSize="@dimen/text_size_small"
				android:layout_gravity="center"
				/>
			<com.socialsportz.View.PMTextView
				android:id="@+id/tv_status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:layout_marginLeft="@dimen/margin_start_vary_2"
				android:text="Active"
				android:textColor="@color/green"
				android:textSize="@dimen/text_size_regular" />

		</LinearLayout>
	</RelativeLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:paddingLeft="@dimen/margin_start_vary_10"
		android:paddingRight="@dimen/margin_start_vary_5"
		android:layout_marginEnd="@dimen/margin_start_vary_10"
		android:layout_alignParentEnd="true"
		android:orientation="horizontal">
		<com.socialsportz.View.PMTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/margin_5dp"
			android:text="Archive Comment: "
			android:gravity="center_vertical"
			android:textColor="@color/dim_grey"
			android:textSize="@dimen/text_size_small"
			android:layout_gravity="center"
			/>
		<com.socialsportz.View.PMTextView
			android:id="@+id/tv_archive_comment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:layout_marginLeft="@dimen/margin_start_vary_2"
			android:text="Active"
			android:textColor="@color/user_theme_color"
			android:textSize="@dimen/text_size_regular" />

	</LinearLayout>

    <RelativeLayout
        android:id="@+id/price_tag_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recycle_rate_button_style"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_start_vary_10"
            android:paddingStart="@dimen/margin_start_vary_10"
            android:paddingTop="@dimen/margin_5dp"
            android:paddingEnd="@dimen/margin_start_vary_10"
            android:paddingBottom="@dimen/margin_5dp"
            tools:ignore="RelativeOverlap">
            <com.socialsportz.View.PRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/price"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/text_size_normal" />
            <com.socialsportz.View.PRTextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_marginStart="@dimen/margin_3dp"
                android:text="@string/price_500"
                android:textColor="#000"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
        <com.socialsportz.View.PMTextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tag"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"
            android:paddingStart="@dimen/margin_20dp"
            android:paddingEnd="@dimen/margin_10dp"
            android:text="@string/slot_court_type"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_regular"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:background="@color/dark_grey"
        android:paddingStart="5dp"
        android:paddingEnd="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/timing_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.socialsportz.View.PRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="2dp"
                android:text="@string/start_date"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_regular" />
            <com.socialsportz.View.PRTextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="2dp"
                android:text="@string/st_date"
                android:textColor="#000"
                android:textSize="@dimen/text_size_ideal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/week_off_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.socialsportz.View.PRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="2dp"
                android:text="@string/end_date"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_regular" />
            <com.socialsportz.View.PRTextView
                android:id="@+id/tv_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/ed_date"
                android:textColor="#000"
                android:textSize="@dimen/text_size_ideal" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/max_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.socialsportz.View.PRTextView
                android:id="@+id/max_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="2dp"
                android:text="@string/max_particpants"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_regular" />
            <com.socialsportz.View.PRTextView
                android:id="@+id/tv_max_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="2dp"
                android:text="@string/max_book_no"
                android:textColor="#000"
                android:textSize="@dimen/text_size_ideal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_price_month"
        android:visibility="gone">

        <View
            android:id="@+id/divider_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:background="@color/dark_grey"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <RelativeLayout
            android:id="@+id/layout_dur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_vary_10"
            android:layout_marginEnd="@dimen/margin_start_vary_10">
            <com.socialsportz.View.PRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/margin_start_vary_10"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/batch_package"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_regular" />
            <com.socialsportz.View.PRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_start_vary_10"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/price"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_regular"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_batch_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"/>

    </LinearLayout>

</LinearLayout>
