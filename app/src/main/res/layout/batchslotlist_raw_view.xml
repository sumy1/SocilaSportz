<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/item_view"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginEnd="@dimen/_6sdp"
	android:layout_marginStart="@dimen/_6sdp"
	android:background="@drawable/canvas_time_active_row_bg"
	android:elevation="@dimen/margin_start_vary_2"
	android:orientation="horizontal">


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/_5sdp">

		<LinearLayout
			android:id="@+id/main"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingBottom="@dimen/margin_5dp"
			android:paddingTop="@dimen/margin_5dp"
			android:weightSum="3">

			<LinearLayout

				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/margin_3dp"
				android:layout_weight="1.2"
				android:orientation="vertical">

				<com.socialsportz.View.PMTextView
					android:id="@+id/tv_slotN"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="@string/slot"
					android:textColor="@color/dim_grey"
					android:textSize="@dimen/text_size_ideal" />



				<LinearLayout
					android:id="@+id/ll_batchTime"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:visibility="gone"
					android:orientation="vertical"
					>

					<com.socialsportz.View.PRTextView
						android:id="@+id/tv_batchStime"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="29 Aug 2019"
						android:gravity="center_horizontal"
						android:textStyle="bold"
						android:textSize="@dimen/text_size_micro"
						android:textColor="@color/black"
						/>

					<com.socialsportz.View.PRTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="to"
						android:textStyle="bold"
						android:layout_gravity="center"
						android:textSize="@dimen/text_size_micro"
						android:textColor="@color/black"/>

					<com.socialsportz.View.PRTextView
						android:id="@+id/tv_batchEtime"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="9:00am to 11:00am"
						android:gravity="center_horizontal"
						android:textSize="@dimen/text_size_micro"
						android:textStyle="bold"
						android:textColor="@color/black"
						/>

				</LinearLayout>

				<com.socialsportz.View.PMTextView
					android:id="@+id/tv_slot_time"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="9:00 AM-11:00 AM"
					android:visibility="visible"
					android:gravity="center_horizontal"
					android:textColor="@color/black"
					android:textSize="@dimen/text_size_micro" />
			</LinearLayout>

			<LinearLayout

				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

				<com.socialsportz.View.PMTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="@string/date"
					android:textColor="@color/dim_grey"
					android:textSize="@dimen/text_size_ideal" />

				<com.socialsportz.View.PMTextView
					android:id="@+id/tv_slote_date"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:text="20-03-2020"
					android:textColor="@color/black"
					android:textSize="@dimen/text_size_micro" />
			</LinearLayout>

			<LinearLayout
				android:id="@+id/ll_plan"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.9"
				android:orientation="vertical"
				android:visibility="gone">

				<com.socialsportz.View.PMTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="@string/plan"
					android:textColor="@color/dim_grey"
					android:textSize="@dimen/text_size_ideal" />

				<com.socialsportz.View.PMTextView
					android:id="@+id/tv_plan"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:text="Monthly"
					android:textColor="@color/black"
					android:textSize="@dimen/text_size_micro" />
			</LinearLayout>

			<LinearLayout

				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.8"
				android:orientation="vertical">

				<com.socialsportz.View.PMTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="@string/price"
					android:textColor="@color/dim_grey"
					android:textSize="@dimen/text_size_ideal" />


				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/img_rupees_kit_p"
						android:layout_width="@dimen/_11sdp"
						android:layout_height="@dimen/_11sdp"
						android:tint="@color/black"
						android:layout_gravity="center_vertical"
						android:contentDescription="@string/app_desc"
						android:src="@drawable/icon_rupees"></ImageView>
					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_price"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0"
						android:textColor="@color/black"
						android:textSize="@dimen/text_size_micro" />
				</LinearLayout>


			</LinearLayout>


		</LinearLayout>


		<LinearLayout
			android:id="@+id/ll_type"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/_10sdp"
			android:paddingRight="@dimen/_8sdp"
			android:layout_below="@+id/main"
			android:orientation="horizontal">
			<com.socialsportz.View.PRTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="Type:"
				android:textColor="@color/dim_grey"
				android:textSize="@dimen/text_size_ideal" />

			<com.socialsportz.View.PRTextView
				android:id="@+id/tv_category_type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="@dimen/_5sdp"
				android:layout_centerVertical="true"
				android:text="Normal"
				android:textColor="@color/black"
				android:textSize="@dimen/text_size_ideal" />

		</LinearLayout>

		<com.socialsportz.View.PRTextView
			android:id="@+id/tv_cancel_status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/margin_start_vary_8"
			android:paddingRight="@dimen/margin_start_vary_8"
			android:layout_alignParentEnd="true"
			android:layout_marginTop="-10dp"
			android:layout_below="@+id/ll_type"
			android:visibility="gone"
			android:layout_centerVertical="true"
			android:text="cancelled"
			android:textColor="@color/red"
			android:textSize="@dimen/text_size_ideal" />
	</RelativeLayout>


</LinearLayout>
