<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/_350sdp"
	xmlns:tools="http://schemas.android.com/tools"
	android:gravity="center"
	android:id="@+id/item"
	android:layout_gravity="center"
	android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/canvas_round_corner_gray"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/canvas_round_corner_blue">

            <com.socialsportz.View.PRTextView
                android:id="@+id/tv_sport_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_start_vary_5"
                android:layout_marginRight="@dimen/margin_start_vary_5"
                android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Booking Details"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_regular"
                />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close"
            android:tint="@color/white"/>
        </RelativeLayout>

        <LinearLayout
			android:id="@+id/top1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:orientation="vertical">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/margin_start_vary_10"
				android:layout_marginTop="@dimen/margin_start_vary_8"
				android:layout_marginEnd="@dimen/margin_start_vary_10"
				android:layout_marginBottom="@dimen/margin_start_vary_8"
				android:background="@drawable/canvas_booking_details_img_bg"
				android:elevation="@dimen/margin_start_vary_2"
				android:padding="@dimen/margin_5dp">

				<LinearLayout
					android:id="@+id/ll_bookingId"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_bookid"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Booking Id : "
						android:textColor="@color/dim_black"
						android:textSize="@dimen/text_size_normal" />

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_booking_order"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="SSZ1000015729445367"
						android:textColor="@color/user_theme_color"
						android:textSize="@dimen/text_size_normal" />

				</LinearLayout>
				<View
					android:id="@+id/v1"
					android:layout_width="match_parent"
					android:layout_height="2dp"
					tools:ignore="InnerclassSeparator"
					android:layout_margin="@dimen/margin_start_vary_8"
					android:layout_below="@+id/ll_bookingId"
					android:background="@drawable/canvas_dotted_line_dim_red"></View>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/v1"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Transaction Date: "
						android:textColor="@color/dim_black"
						android:textSize="@dimen/text_size_normal" />

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_transationDate"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="29 feb 2020"
						android:textColor="@color/dim_grey"
						android:textSize="@dimen/text_size_micro" />

				</LinearLayout>

			</RelativeLayout>


        </LinearLayout>

		<LinearLayout
			android:id="@+id/top2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/top1"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/margin_start_vary_10"
				android:layout_marginEnd="@dimen/margin_start_vary_10"
				android:layout_marginBottom="@dimen/margin_start_vary_8"
				android:background="@drawable/canvas_booking_details_img_bg"
				android:elevation="@dimen/margin_start_vary_2"
				android:padding="@dimen/margin_5dp">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="@dimen/margin_start_vary_8"
					android:layout_alignParentStart="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Booking Mode : "
						android:textColor="@color/dim_black"
						android:textSize="@dimen/text_size_normal" />

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_booking_mode"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="offline"
						android:textColor="@color/green"
						android:textSize="@dimen/text_size_normal" />

				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_alignParentEnd="true"
					android:layout_marginEnd="@dimen/margin_start_vary_8"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imgg"
						android:layout_width="@dimen/margin_20dp"
						android:layout_height="@dimen/margin_20dp"
						android:src="@drawable/football_image"
						android:layout_gravity="center"
						android:layout_centerVertical="true"
						android:layout_alignParentStart="true"
						android:scaleType="fitXY"
						android:contentDescription="@string/app_desc"/>

					<com.socialsportz.View.PRTextView
						android:id="@+id/tv_sport_namee"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/img"
						android:layout_marginStart="@dimen/margin_3dp"
						android:layout_centerVertical="true"
						android:ellipsize="end"
						android:singleLine="true"
						android:text="@string/football"
						android:textColor="@color/black_semi_transparent"
						android:textSize="@dimen/text_size_normal" />

				</LinearLayout>


			</RelativeLayout>


		</LinearLayout>



			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/rv_details"
				android:layout_width="match_parent"
				android:scrollbars="vertical"
				android:layout_below="@+id/top2"
				android:layout_above="@+id/below"
				android:scrollIndicators="right"
				android:overScrollMode="never"
				android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>


			<RelativeLayout
				android:id="@+id/below"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/margin_start_vary_10"
				android:layout_marginTop="@dimen/margin_start_vary_8"
				android:layout_marginEnd="@dimen/margin_start_vary_10"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="@dimen/margin_start_vary_8"
				android:background="@drawable/canvas_booking_details_img_bg"
				android:elevation="@dimen/margin_start_vary_2"
				android:padding="@dimen/margin_5dp">


				<LinearLayout
					android:id="@+id/top5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Total Amount: "
						android:textColor="@color/dim_black"
						android:textSize="@dimen/_10sdp" />


					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:orientation="horizontal">
						<com.socialsportz.View.PMTextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="(+)"
							android:textColor="@color/user_theme_color"
							android:textSize="@dimen/_10sdp" />
						<ImageView
							android:id="@+id/img_rupees_kit_p"
							android:layout_width="@dimen/_11sdp"
							android:layout_height="@dimen/_11sdp"
							android:tint="@color/user_theme_color"
							android:layout_gravity="center_vertical"
							android:contentDescription="@string/app_desc"
							android:src="@drawable/icon_rupees"></ImageView>
						<com.socialsportz.View.PMTextView
							android:id="@+id/tv_total_amnt"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0"
							android:textColor="@color/user_theme_color"
							android:textSize="@dimen/_10sdp" />
					</LinearLayout>



				</LinearLayout>
				<LinearLayout
					android:id="@+id/top6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/top5"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Coupon Discount: "
						android:textColor="@color/dim_black"
						android:textSize="@dimen/_10sdp" />

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:orientation="horizontal">
						<com.socialsportz.View.PMTextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/Rss"
							android:textColor="@color/user_theme_color"
							android:textSize="@dimen/_10sdp" />
						<ImageView
							android:layout_width="@dimen/_11sdp"
							android:layout_height="@dimen/_11sdp"
							android:tint="@color/user_theme_color"
							android:layout_gravity="center_vertical"
							android:contentDescription="@string/app_desc"
							android:src="@drawable/icon_rupees"></ImageView>
						<com.socialsportz.View.PMTextView
							android:id="@+id/tv_coupanDiscount"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0"
							android:textColor="@color/user_theme_color"
							android:textSize="@dimen/_10sdp" />
					</LinearLayout>



				</LinearLayout>

				<LinearLayout
					android:id="@+id/top7"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/top6"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Convenience Fee: "
						android:textColor="@color/dim_black"
						android:textSize="@dimen/_10sdp" />

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:orientation="horizontal">
						<com.socialsportz.View.PMTextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="(+)"
							android:textColor="@color/user_theme_color"
							android:textSize="@dimen/_10sdp" />
						<ImageView
							android:layout_width="@dimen/_11sdp"
							android:layout_height="@dimen/_11sdp"
							android:tint="@color/user_theme_color"
							android:layout_gravity="center_vertical"
							android:contentDescription="@string/app_desc"
							android:src="@drawable/icon_rupees"></ImageView>
						<com.socialsportz.View.PMTextView
							android:id="@+id/tv_conveniensfee"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0"
							android:textColor="@color/user_theme_color"
							android:textSize="@dimen/_10sdp" />
					</LinearLayout>



				</LinearLayout>


				<LinearLayout
					android:id="@+id/top8"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/top7"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_feesatx"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="GST On Convenience Fee"
						android:textColor="@color/dim_black"
						android:textSize="@dimen/_10sdp" />

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:orientation="horizontal">
						<com.socialsportz.View.PMTextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="(+)"
							android:textColor="@color/user_theme_color"
							android:textSize="@dimen/_10sdp" />
						<ImageView
							android:layout_width="@dimen/_11sdp"
							android:layout_height="@dimen/_11sdp"
							android:tint="@color/user_theme_color"
							android:layout_gravity="center_vertical"
							android:contentDescription="@string/app_desc"
							android:src="@drawable/icon_rupees"></ImageView>
						<com.socialsportz.View.PMTextView
							android:id="@+id/tv_conveniencetax"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0"
							android:textColor="@color/user_theme_color"
							android:textSize="@dimen/_10sdp" />
					</LinearLayout>



				</LinearLayout>

				<View
					android:id="@+id/v2"
					android:layout_width="match_parent"
					android:layout_height="3dp"
					tools:ignore="InnerclassSeparator"
					android:layout_margin="@dimen/margin_start_vary_8"
					android:layout_below="@+id/top8"
					android:background="@drawable/canvas_dotted_line_dim_red"></View>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/v2"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Paid Amount: "
						android:textColor="@color/black"
						android:textSize="@dimen/_10sdp" />

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:orientation="horizontal">

						<ImageView
							android:layout_width="@dimen/_11sdp"
							android:layout_height="@dimen/_11sdp"
							android:tint="@color/user_theme_color"
							android:layout_gravity="center_vertical"
							android:contentDescription="@string/app_desc"
							android:src="@drawable/icon_rupees"></ImageView>
						<com.socialsportz.View.PMTextView
							android:id="@+id/tv_paid_amnt"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0"
							android:textColor="@color/user_theme_color"
							android:textSize="@dimen/_10sdp" />
					</LinearLayout>



				</LinearLayout>

			</RelativeLayout>






    </RelativeLayout>

</RelativeLayout>
