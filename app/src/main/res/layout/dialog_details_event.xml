<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/item"
	android:gravity="center"
	android:layout_gravity="center"
	android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/canvas_round_corner_white"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/canvas_round_corner_blue">

            <com.socialsportz.View.PRTextView
                android:id="@+id/tv_sport_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_start_vary_5"
                android:layout_marginRight="@dimen/margin_start_vary_5"
                android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Booking Details"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_regular"
                />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close"
            android:tint="@color/white"/>
        </RelativeLayout>

        <LinearLayout
			android:id="@+id/top1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:orientation="vertical">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/margin_start_vary_10"
				android:layout_marginTop="@dimen/margin_start_vary_8"
				android:layout_marginEnd="@dimen/margin_start_vary_10"
				android:layout_marginBottom="@dimen/margin_start_vary_8"
				android:background="@drawable/canvas_booking_details_img_bg"
				android:elevation="@dimen/margin_start_vary_2"
				android:padding="@dimen/margin_5dp">

				<LinearLayout
					android:id="@+id/ll_bookingId"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_bookid"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Booking Id : "
						android:textColor="@color/dim_black"
						android:textSize="@dimen/text_size_normal" />

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_booking_order"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="SSZ1000015729445367"
						android:textColor="@color/user_theme_color"
						android:textSize="@dimen/text_size_normal" />

				</LinearLayout>
				<View
					android:id="@+id/v1"
					android:layout_width="match_parent"
					android:layout_height="2dp"
					tools:ignore="InnerclassSeparator"
					android:layout_margin="@dimen/margin_start_vary_8"
					android:layout_below="@+id/ll_bookingId"
					android:background="@drawable/canvas_dotted_line_dim_red"></View>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/v1"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Transaction Date: "
						android:textColor="@color/dim_black"
						android:textSize="@dimen/text_size_normal" />

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_transationDate"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="29 feb 2020"
						android:textColor="@color/dim_grey"
						android:textSize="@dimen/text_size_micro" />

				</LinearLayout>

			</RelativeLayout>


        </LinearLayout>

		<LinearLayout
			android:id="@+id/top2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/top1"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/margin_start_vary_10"
				android:layout_marginEnd="@dimen/margin_start_vary_10"
				android:layout_marginBottom="@dimen/margin_start_vary_8"
				android:background="@drawable/canvas_booking_details_img_bg"
				android:elevation="@dimen/margin_start_vary_2"
				android:padding="@dimen/margin_5dp">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="@dimen/margin_start_vary_8"
					android:layout_alignParentStart="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Booking Mode : "
						android:textColor="@color/dim_black"
						android:textSize="@dimen/text_size_normal" />

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_booking_mode"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="offline"
						android:textColor="@color/green"
						android:textSize="@dimen/text_size_normal" />

				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_alignParentEnd="true"
					android:layout_marginEnd="@dimen/margin_start_vary_8"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imgg"
						android:layout_width="@dimen/margin_20dp"
						android:layout_height="@dimen/margin_20dp"
						android:src="@drawable/football_image"
						android:layout_gravity="center"
						android:layout_centerVertical="true"
						android:layout_alignParentStart="true"
						android:scaleType="fitXY"
						android:contentDescription="@string/app_desc"/>

					<com.socialsportz.View.PRTextView
						android:id="@+id/tv_sport_namee"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/img"
						android:layout_marginStart="@dimen/margin_3dp"
						android:layout_centerVertical="true"
						android:ellipsize="end"
						android:singleLine="true"
						android:text="@string/football"
						android:textColor="@color/black_semi_transparent"
						android:textSize="@dimen/text_size_normal" />

				</LinearLayout>


			</RelativeLayout>


		</LinearLayout>


       <com.google.android.material.card.MaterialCardView
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:layout_below="@+id/top2"
		   android:layout_margin="@dimen/_10sdp"
		   android:elevation="@dimen/_3sdp"
		   app:cardCornerRadius="@dimen/_5sdp"
		   android:background="@drawable/canvas_booking_details_img_bg"
		   android:id="@+id/main">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="3">

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/margin_3dp"
				android:layout_weight="1.2"
				android:padding="@dimen/_5sdp"
				android:orientation="vertical">

				<com.socialsportz.View.PMTextView
					android:id="@+id/tv_slotN"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="@string/event_timing"
					android:textColor="@color/dim_grey"
					android:textSize="@dimen/text_size_ideal" />

				<com.socialsportz.View.PMTextView
					android:id="@+id/tv_slot_time"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="9:00 AM-11:00 AM"
					android:layout_marginTop="@dimen/_1sdp"
					android:gravity="center_horizontal"
					android:layout_gravity="center_horizontal"
					android:textColor="@color/black"
					android:textSize="@dimen/text_size_micro" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="@dimen/_5sdp"
				android:orientation="vertical">

				<com.socialsportz.View.PMTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="@string/event_date"
					android:textColor="@color/dim_grey"
					android:textSize="@dimen/text_size_ideal" />

				<com.socialsportz.View.PMTextView
					android:id="@+id/tv_slote_date"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:layout_marginTop="@dimen/_1sdp"
					android:text="20-03-2020"
					android:textColor="@color/black"
					android:textSize="@dimen/text_size_micro" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.8"
				android:padding="@dimen/_5sdp"
				android:orientation="vertical">

				<com.socialsportz.View.PMTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="@string/price"
					android:textColor="@color/dim_grey"
					android:textSize="@dimen/text_size_ideal" />

				<com.socialsportz.View.PMTextView
					android:id="@+id/tv_price"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:layout_marginTop="@dimen/_1sdp"
					android:text="\u20B9 11"
					android:textColor="@color/black"
					android:textSize="@dimen/text_size_micro" />
			</LinearLayout>

		</LinearLayout>
	   </com.google.android.material.card.MaterialCardView>

		<com.socialsportz.View.PMTextView
			android:id="@+id/tv_cancel_status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:visibility="visible"
			android:layout_marginRight="@dimen/_10sdp"
			android:layout_centerVertical="true"
			android:text="cancelled"
			android:layout_below="@+id/main"
			android:textColor="@color/red"
			android:textSize="@dimen/text_size_ideal">
		</com.socialsportz.View.PMTextView>

			<RelativeLayout
				android:id="@+id/below"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/margin_start_vary_10"
				android:layout_marginTop="@dimen/margin_start_vary_8"
				android:layout_marginEnd="@dimen/margin_start_vary_10"
				android:layout_marginBottom="@dimen/margin_start_vary_8"
			    android:layout_below="@+id/tv_cancel_status"
				android:background="@drawable/canvas_booking_details_img_bg"
				android:elevation="@dimen/margin_start_vary_2"
				android:padding="@dimen/margin_5dp">


				<LinearLayout
					android:id="@+id/top5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Total Amount: "
						android:textColor="@color/dim_black"
						android:textSize="@dimen/_10sdp" />

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_total_amnt"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/Rss"
						android:textColor="@color/user_theme_color"
						android:textSize="@dimen/_10sdp" />

				</LinearLayout>
				<LinearLayout
					android:id="@+id/top6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/top5"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Coupon Discount: "
						android:textColor="@color/dim_black"
						android:textSize="@dimen/_10sdp" />

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_coupanDiscount"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="(-)\u20B9 0"
						android:textColor="@color/user_theme_color"
						android:textSize="@dimen/_10sdp" />

				</LinearLayout>


				<LinearLayout
					android:id="@+id/top7"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/top6"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Convenience Fee: "
						android:textColor="@color/dim_black"
						android:textSize="@dimen/_10sdp" />

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_conveniensfee"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="(+)\u20B9 0"
						android:textColor="@color/user_theme_color"
						android:textSize="@dimen/_10sdp" />

				</LinearLayout>


				<LinearLayout
					android:id="@+id/top8"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/top7"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="GST On Convenience Fee(18%): "
						android:textColor="@color/dim_black"
						android:textSize="@dimen/_10sdp" />

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_conveniencetax"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="(+)\u20B9 0"
						android:textColor="@color/user_theme_color"
						android:textSize="@dimen/_10sdp" />

				</LinearLayout>


				<View
					android:id="@+id/v2"
					android:layout_width="match_parent"
					android:layout_height="3dp"
					tools:ignore="InnerclassSeparator"
					android:layout_margin="@dimen/margin_start_vary_8"
					android:layout_below="@+id/top8"
					android:background="@drawable/canvas_dotted_line_dim_red"></View>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/v2"
					android:layout_centerHorizontal="true"
					android:orientation="horizontal">

					<com.socialsportz.View.PMTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Paid Amount: "
						android:textColor="@color/black"
						android:textSize="@dimen/text_size_normal" />

					<com.socialsportz.View.PMTextView
						android:id="@+id/tv_paid_amnt"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="\u20B9 200"
						android:textColor="@color/user_theme_color"
						android:textSize="@dimen/text_size_normal" />

				</LinearLayout>

			</RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
