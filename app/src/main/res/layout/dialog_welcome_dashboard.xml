<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/item"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/canvas_round_corner_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/thumps_up"
            android:contentDescription="@string/app_desc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:orientation="vertical">

            <com.socialsportz.View.PMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/thanks_msgg"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_xxlarge"
                android:textAllCaps="false"/>

            <com.socialsportz.View.PRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginStart="@dimen/margin_35dp"
                android:layout_marginEnd="@dimen/margin_35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/welcome_review"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_regular"/>

            <com.socialsportz.View.PRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_35dp"
                android:layout_marginEnd="@dimen/margin_35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/welcome_msg"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_regular"/>


            <com.socialsportz.View.PMButton
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginStart="@dimen/margin_25dp"
                android:layout_marginEnd="@dimen/margin_25dp"
                android:layout_marginBottom="@dimen/margin_25dp"
                android:background="@drawable/canvas_forgot_btn_bg"
                android:text="@string/continue_dashboard"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_regular"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
