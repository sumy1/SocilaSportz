<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:contentDescription="@string/app_desc"
            android:scaleType="fitXY"
            android:src="@drawable/running_event" />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_start_vary_10"
            android:background="@drawable/canvas_event_listing_top_two_cr">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/bt_edit"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <com.socialsportz.View.PMTextView
                        android:id="@+id/tv_event_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/round_marathon"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginStart="@dimen/margin_15dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_xxlarge"/>

                    <com.socialsportz.View.PRTextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="enable"
                        android:layout_marginStart="@dimen/margin_15dp"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/text_size_micro"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/bt_edit"
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="@dimen/margin_40dp"
                    android:contentDescription="@string/app_desc"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_more_horiz_white"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_start_vary_10"
                    android:layout_centerVertical="true"
                    android:tint="@color/theme_color"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_start_vary_8"
                android:layout_marginBottom="@dimen/margin_start_vary_5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/canvas_event_listing_bg"
                    android:layout_marginStart="@dimen/margin_start_vary_10"
                    android:layout_marginEnd="@dimen/margin_start_vary_2"
                    android:layout_marginBottom="@dimen/margin_start_vary_2">
                    <com.socialsportz.View.PMTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enrollment Date"
                        android:layout_gravity="center"
                        android:textColor="@color/dim_grey"
                        android:textSize="@dimen/text_size_regular"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/margin_start_vary_2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="start"
                            android:layout_margin="@dimen/margin_start_vary_2"
                            android:layout_weight="1">
                            <com.socialsportz.View.PMTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/from"
                                android:layout_gravity="center"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/text_size_small"/>
                            <com.socialsportz.View.PMTextView
                                android:id="@+id/tv_st_enroll_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/st_date"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="end"
                            android:layout_margin="@dimen/margin_start_vary_2"
                            android:layout_weight="1">
                            <com.socialsportz.View.PMTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/to"
                                android:layout_gravity="center"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/text_size_small"/>
                            <com.socialsportz.View.PMTextView
                                android:id="@+id/tv_ed_enroll_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ed_date"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/canvas_event_listing_bg"
                    android:layout_marginStart="@dimen/margin_start_vary_2"
                    android:layout_marginEnd="@dimen/margin_start_vary_10"
                    android:layout_marginBottom="@dimen/margin_start_vary_2">

                    <com.socialsportz.View.PMTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/event_date"
                        android:textColor="@color/dim_grey"
                        android:textSize="@dimen/text_size_regular" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/margin_start_vary_2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="start"
                            android:layout_margin="@dimen/margin_start_vary_2"
                            android:layout_weight="1">
                            <com.socialsportz.View.PMTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/from"
                                android:layout_gravity="center"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/text_size_small"/>
                            <com.socialsportz.View.PMTextView
                                android:id="@+id/tv_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/st_date"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="end"
                            android:layout_margin="@dimen/margin_start_vary_2"
                            android:layout_weight="1">
                            <com.socialsportz.View.PMTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/to"
                                android:layout_gravity="center"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/text_size_small"/>
                            <com.socialsportz.View.PMTextView
                                android:id="@+id/tv_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ed_date"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/canvas_event_listing_bg"
                    android:layout_marginStart="@dimen/margin_start_vary_10"
                    android:layout_marginEnd="@dimen/margin_start_vary_2"
                    android:layout_marginBottom="@dimen/margin_start_vary_2">

                    <com.socialsportz.View.PMTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_25dp"
                        android:layout_gravity="center"
                        android:text="@string/event_timing"
                        android:textColor="@color/dim_grey"
                        android:textSize="@dimen/text_size_regular" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/margin_start_vary_2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="start"
                            android:layout_margin="@dimen/margin_start_vary_2"
                            android:layout_weight="1">
                            <com.socialsportz.View.PMTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/start"
                                android:layout_gravity="center"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/text_size_small"/>
                            <com.socialsportz.View.PMTextView
                                android:id="@+id/tv_start_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hh_mm_ss"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="end"
                            android:layout_margin="@dimen/margin_start_vary_2"
                            android:layout_weight="1">
                            <com.socialsportz.View.PMTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/end"
                                android:layout_gravity="center"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/text_size_small"/>
                            <com.socialsportz.View.PMTextView
                                android:id="@+id/tv_end_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hh_mm_ss"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/canvas_event_listing_bg"
                    android:layout_marginStart="@dimen/margin_start_vary_2"
                    android:layout_marginEnd="@dimen/margin_start_vary_10"
                    android:layout_marginBottom="@dimen/margin_start_vary_2">
                    <com.socialsportz.View.PMTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/max_particpants"
                        android:layout_gravity="center"
                        android:textColor="@color/dim_grey"
                        android:textSize="@dimen/text_size_regular"/>
                    <com.socialsportz.View.PMTextView
                        android:id="@+id/tv_max_booking"
                        android:layout_width="@dimen/margin_35dp"
                        android:layout_height="@dimen/margin_35dp"
                        android:text="@string/str_12"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="@dimen/margin_1dp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        android:textSize="@dimen/text_size_regular"
                        android:background="@drawable/canvas_round_white_bg"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginStart="@dimen/margin_start_vary_10"
                android:layout_marginEnd="@dimen/margin_start_vary_10"
                android:layout_marginTop="@dimen/margin_start_vary_5"
                android:background="@drawable/canvas_event_listing_bg"
                android:padding="@dimen/margin_start_vary_2">
                <com.socialsportz.View.PMTextView
                    android:id="@+id/venue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/venue"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_start_vary_10"
                    android:textColor="@color/dim_grey"
                    android:textSize="@dimen/text_size_large"/>
                <com.socialsportz.View.PMTextView
                    android:id="@+id/tv_venue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/venue"
                    android:text="@string/noida_stdm"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_start_vary_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_large"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginStart="@dimen/margin_start_vary_10"
                android:layout_marginEnd="@dimen/margin_start_vary_10"
                android:layout_marginTop="@dimen/margin_start_vary_5"
                android:background="@drawable/canvas_event_listing_bg"
                android:padding="@dimen/margin_start_vary_2">
                <com.socialsportz.View.PMTextView
                    android:id="@+id/sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sport"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_start_vary_10"
                    android:textColor="@color/dim_grey"
                    android:textSize="@dimen/text_size_large"/>
                <com.socialsportz.View.PMTextView
                    android:id="@+id/tv_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/sport"
                    android:text="@string/football"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_start_vary_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_large"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginStart="@dimen/margin_start_vary_10"
                android:layout_marginEnd="@dimen/margin_start_vary_10"
                android:layout_marginTop="@dimen/margin_start_vary_5"
                android:background="@drawable/canvas_event_listing_bg"
                android:padding="@dimen/margin_start_vary_2">
                <com.socialsportz.View.PMTextView
                    android:id="@+id/fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fees"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_start_vary_10"
                    android:textColor="@color/dim_grey"
                    android:textSize="@dimen/text_size_large"/>
                <com.socialsportz.View.PMTextView
                    android:id="@+id/tv_fees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/fee"
                    android:text="@string/price_500"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_start_vary_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_large"/>
            </RelativeLayout>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</LinearLayout>
