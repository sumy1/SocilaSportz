                                    android:textColor="@color/black_semi_transparent"
                                    android:textSize="@dimen/text_size_ideal" />

                            </LinearLayout>

                        </LinearLayout>

                        <!--<com.taufiqrahman.reviewratings.RatingReviews
                            android:id="@+id/rating_reviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/margin_15dp"
                            bar:animation="true"
                            bar:show_label="true"
                            bar:show_raters="true"
                            bar:spaces="@dimen/margin_start_vary_8"
                            bar:text_color="#333333"
                            bar:text_size="@dimen/rating_text"
                            bar:rounded="true"
                            bar:width="@dimen/text_size_small" />-->

                        <View
                            android:layout_width="@dimen/margin_1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_marginBottom="@dimen/margin_20dp"
                            android:background="@color/dark_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.socialsportz.View.PBTextView
                                    android:id="@+id/tv_total_reviews"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/theme_color"
                                    android:textSize="@dimen/text_size_xxlarge" />

                                <com.socialsportz.View.PMTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_reviews"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/text_size_large" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.socialsportz.View.PBTextView
                                    android:id="@+id/tv_average_rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/theme_color"
                                    android:textSize="@dimen/text_size_xxlarge" />

                                <com.socialsportz.View.PMTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/avg_rating"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/text_size_large" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_start_vary_10"
                android:paddingTop="@dimen/margin_10dp"
                android:paddingEnd="@dimen/margin_start_vary_10"
                android:paddingBottom="@dimen/margin_10dp"
                android:visibility="gone">

                <com.socialsportz.View.PMTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/booking_stats"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_large" />

                <LinearLayout
                    android:id="@+id/bar_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/canvas_booking_details_img_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/padding_15dp"
                        android:paddingTop="@dimen/padding_15dp"
                        android:paddingEnd="@dimen/padding_15dp"
                        android:paddingBottom="@dimen/margin_10dp">

                        <com.socialsportz.View.PMTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sport_name_hint"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/text_size_normal" />

                        <com.socialsportz.Utils.DropDownView
                            android:id="@+id/drop_spt"
                            style="@style/formDropDown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_3dp"
                            android:background="@drawable/canvas_dash_edittext_bg"
                            android:drawableEnd="@drawable/ic_keyboard_arrow_down_grey"
                            android:hint="@string/select_sport"
                            android:padding="@dimen/margin_5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_large" />

                    </LinearLayout>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/book_chart"
                        android:layout_width="match_parent"
                        android:layout_height="380dp"
                        android:layout_marginBottom="@dimen/margin_10dp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_vary_10"
                    android:layout_marginEnd="@dimen/margin_start_vary_10">

                    <com.socialsportz.View.PMTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/latest_enquiry"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_large" />

                    <com.socialsportz.View.PMTextView
                        android:id="@+id/tv_enquiry_see"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/see_all"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/text_size_large"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/empty_view_enquiry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.socialsportz.View.PRTextView
                            android:id="@+id/tv_empty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_start_vary_10"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_marginEnd="@dimen/margin_start_vary_10"
                            android:gravity="center"
                            android:text="@string/enquiry_dash"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_enquiries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingStart="@dimen/margin_start_vary_10"
                        android:paddingTop="@dimen/margin_start_vary_8"
                        android:paddingEnd="@dimen/margin_start_vary_10" />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

