<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/relative_rate_review_style"
    app:cardCornerRadius="@dimen/margin_5dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_start_vary_10"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <View
                android:id="@+id/tv_des"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_size_small"
                android:text="Facility booking has be done hifafajfa jafaF JFAPF lfjaf"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:background="@color/shimmer_background"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/green"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_start_vary_5" >
            <View
                android:id="@+id/tv_fac_name"
                android:layout_width="160dp"
                android:layout_height="@dimen/text_size_micro"
                android:text="@string/facility_namee"
                android:layout_alignParentStart="true"
                android:background="@color/shimmer_background"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_micro"
                android:textColor="@color/dim_grey"/>

            <View
                android:id="@+id/tv_n_name"
                android:layout_width="150dp"
                android:layout_height="@dimen/text_size_micro"
                android:text="DDA SPORTS COMPLEX NOIDA"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_start_vary_2"
                android:background="@color/shimmer_background"
                android:layout_toRightOf="@+id/tv_fac_name"
                android:textSize="@dimen/text_size_micro"
                android:textColor="@color/dim_grey">

            </View>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/margin_start_vary_5"
                android:layout_centerVertical="true">
                <View
                    android:id="@+id/tv_sport_name"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_size_micro"
                    android:text="@string/sports_namee"
                    android:layout_alignParentStart="true"
                    android:background="@color/shimmer_background"
                    android:textSize="@dimen/text_size_micro"
                    android:textColor="@color/dim_grey"/>

                <View
                    android:id="@+id/tv_sport"
                    android:layout_width="160dp"
                    android:layout_height="@dimen/text_size_small"
                    android:text="Cricket"
                    android:background="@color/shimmer_background"
                    android:layout_toRightOf="@+id/tv_sport_name"
                    android:layout_marginLeft="@dimen/margin_start_vary_2"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/dim_grey">



                </View>
            </RelativeLayout>

            <View
                android:id="@+id/tv_time"
                android:layout_width="180dp"
                android:layout_height="@dimen/text_size_small"
                android:text="26-02-20(26:29)"
                android:background="@color/shimmer_background"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/dim_grey">

            </View>
        </RelativeLayout>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
