<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.socialsportz.View.PMTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/margin_start_vary_2"
        android:text="Premium Slot"
        android:textColor="@color/white"
        android:background="@color/user_theme_color"
        android:textSize="@dimen/text_size_ideal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_start_vary_5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_start_vary_5"
            android:layout_weight="0.8"
            android:gravity="center">
            <com.socialsportz.View.PMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_start_vary_2"
                android:text="Slot Date"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_ideal"/>
            <com.socialsportz.View.PMTextView
                android:id="@+id/tv_sport_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27 Aug 2019"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/dim_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_start_vary_5"
            android:layout_weight="0.7"
            android:gravity="center">
            <com.socialsportz.View.PMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_start_vary_2"
                android:text="@string/timings"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_ideal"/>
            <com.socialsportz.View.PMTextView
                android:id="@+id/tv_sport_timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slot_timing"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/dim_black"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
