<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_start_vary_5">
        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="@dimen/margin_start_vary_30"
            android:layout_height="@dimen/margin_start_vary_30"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_email"
            android:tint="@color/dark_grey"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/view"
            android:layout_width="@dimen/margin_1dp"
            android:layout_height="@dimen/margin_start_vary_65"
            android:background="@color/dark_grey"
            android:layout_toEndOf="@+id/email_icon"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_start_vary_5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_start_vary_8"
            android:layout_toEndOf="@+id/view">
            <com.socialsportz.View.PMTextView
                android:id="@+id/tv_e_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noida_stdm"
                android:textSize="@dimen/text_size_ideal"
                android:textColor="@color/theme_color"/>
            <com.socialsportz.View.PMTextView
                android:id="@+id/tv_e_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_ns"
                android:textSize="@dimen/text_size_small"
                android:maxLines="2"
                android:textColor="@color/dark_grey"/>
            <com.socialsportz.View.PMTextView
                android:id="@+id/tv_e_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hour ago"
                android:textSize="@dimen/text_size_ideal"
                android:maxLines="1"
                android:textColor="@color/dim_grey"/>
        </LinearLayout>
    </RelativeLayout>
