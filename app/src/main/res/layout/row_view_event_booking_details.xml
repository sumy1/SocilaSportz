<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/canvas_booking_details_img_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_start_vary_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5dp"
            android:orientation="vertical">

            <com.socialsportz.View.PMTextView
                android:id="@+id/tv_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/dim_red"/>

            <com.socialsportz.View.PMTextView
                android:id="@+id/tv_event_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Venue"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/black_semi_transparent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.socialsportz.View.PRTextView
                    android:id="@+id/tv_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Football"
                    android:textSize="@dimen/text_size_regular"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="2dp"
            android:paddingStart="@dimen/margin_10dp"
            android:paddingEnd="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_3dp"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:gravity="end"
            android:background="@drawable/canvas_round_green_circle"
            android:orientation="horizontal">

            <com.socialsportz.View.PRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/price"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_ideal"/>

            <com.socialsportz.View.PMTextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_start_vary_2"
                android:paddingEnd="@dimen/margin_5dp"
                android:paddingStart="@dimen/margin_5dp"
                android:paddingTop="@dimen/margin_start_vary_2"
                android:text="@string/price_500"
                android:textColor="@color/green"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.7dp"
        android:background="@color/dark_grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_start_vary_5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_start_vary_5"
            android:layout_weight="0.8"
            android:gravity="center">
            <com.socialsportz.View.PMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_start_vary_2"
                android:text="@string/event_date"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_ideal"/>
            <com.socialsportz.View.PMTextView
                android:id="@+id/tv_sport_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27 Aug 2019"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/dim_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_start_vary_5"
            android:layout_weight="0.7"
            android:gravity="center">
            <com.socialsportz.View.PMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_start_vary_2"
                android:text="@string/timings"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_ideal"/>
            <com.socialsportz.View.PMTextView
                android:id="@+id/tv_sport_timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slot_timing"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/dim_black"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
