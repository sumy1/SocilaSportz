<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/margin_start_vary_5">
    <View
        android:id="@+id/email_icon"
        android:layout_width="@dimen/margin_start_vary_30"
        android:layout_height="@dimen/margin_start_vary_30"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@color/shimmer_background"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/view"
        android:layout_width="@dimen/margin_1dp"
        android:layout_height="@dimen/margin_start_vary_65"
        android:background="@color/shimmer_background"
        android:layout_toEndOf="@+id/email_icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_start_vary_5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_start_vary_8"
        android:layout_toEndOf="@+id/view">
        <View
            android:id="@+id/tv_e_subject"
            android:layout_width="100dp"
            android:layout_height="@dimen/text_size_regular"
            android:background="@color/shimmer_background"/>
        <View
            android:id="@+id/tv_e_msg"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_start_vary_2"
            android:layout_height="@dimen/text_size_small"
            android:background="@color/shimmer_background"
            android:layout_marginEnd="@dimen/margin_start_vary_10"/>
        <View
            android:id="@+id/tv_e_msg1"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_start_vary_2"
            android:layout_marginEnd="@dimen/margin_start_vary_10"
            android:layout_height="@dimen/text_size_small"
            android:background="@color/shimmer_background"/>
        <View
            android:id="@+id/tv_e_time"
            android:layout_width="80dp"
            android:layout_marginTop="@dimen/margin_start_vary_5"
            android:layout_height="@dimen/text_size_small"
            android:background="@color/shimmer_background"/>
    </LinearLayout>
</RelativeLayout>