<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/relative_rate_review_style"
    app:cardCornerRadius="@dimen/margin_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/margin_start_vary_60"
            android:layout_height="@dimen/margin_start_vary_60"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@color/background" />

        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_profile"
            android:orientation="vertical">

            <View
                android:layout_width="200dp"
                android:layout_height="@dimen/text_size_large"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/shimmer_background" />
            <View
                android:layout_width="100dp"
                android:layout_height="@dimen/text_size_regular"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="5dp"
                android:background="@color/shimmer_background" />

            <View
                android:layout_width="100dp"
                android:layout_height="@dimen/text_size_regular"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="5dp"
                android:background="@color/shimmer_background" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/review_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_below="@+id/iv_profile">

            <View
                android:layout_width="50dp"
                android:layout_height="@dimen/text_size_regular"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="5dp"
                android:background="@color/shimmer_background" />

            <View
                android:layout_width="50dp"
                android:layout_height="@dimen/text_size_regular"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="5dp"
                android:background="@color/shimmer_background" />

            <View
                android:layout_width="50dp"
                android:layout_height="@dimen/text_size_regular"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="5dp"
                android:background="@color/shimmer_background" />

            <View
                android:layout_width="50dp"
                android:layout_height="@dimen/text_size_regular"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="5dp"
                android:background="@color/shimmer_background" />

        </LinearLayout>

        <View
            android:id="@+id/rating_divider_view"
            android:layout_width="match_parent"
            android:layout_below="@+id/review_layout"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@color/dark_grey"
            android:layout_marginBottom="@dimen/margin_5dp"/>

        <LinearLayout
            android:id="@+id/date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating_divider_view"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="200dp"
                android:layout_height="@dimen/text_size_regular"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:background="@color/shimmer_background" />

        </LinearLayout>



    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>