<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_start_vary_8"
    android:background="@drawable/relative_rate_review_style"
    app:cardCornerRadius="@dimen/margin_start_vary_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/event_banner_size"
            android:scaleType="fitXY"
            android:src="@drawable/running_event"
            android:background="@color/shimmer_background"/>

        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_banner"
            android:layout_toStartOf="@+id/date_layout"
            android:padding="@dimen/margin_start_vary_8"
            android:orientation="vertical">

            <View
                android:id="@+id/tv_field"
                android:layout_width="250dp"
                android:layout_height="@dimen/text_size_large"
                android:background="@color/shimmer_background"/>

            <View
                android:id="@+id/tv_venue"
                android:layout_width="180dp"
                android:layout_height="@dimen/text_size_regular"
                android:layout_marginTop="@dimen/margin_start_vary_2"
                android:background="@color/shimmer_background"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/iv_banner"
            android:padding="@dimen/margin_start_vary_8"
            android:orientation="horizontal">

            <View
                android:id="@+id/tv_start_date"
                android:layout_width="100dp"
                android:layout_height="@dimen/text_size_large"
                android:background="@color/shimmer_background"
                android:gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:orientation="horizontal"
            android:background="@color/dark_grey"
            android:padding="@dimen/margin_start_vary_8"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_size_regular"
                    android:layout_gravity="center"
                    android:background="@color/shimmer_background"/>

                <View
                    android:id="@+id/tv_total_booking"
                    android:layout_width="80dp"
                    android:layout_marginTop="@dimen/margin_start_vary_2"
                    android:layout_height="@dimen/text_size_regular"
                    android:layout_gravity="center"
                    android:background="@color/shimmer_background"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:layout_width="150dp"
                    android:layout_height="@dimen/text_size_regular"
                    android:layout_gravity="center"
                    android:background="@color/shimmer_background"/>

                <View
                    android:id="@+id/tv_confirmed_booked"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/text_size_regular"
                    android:background="@color/shimmer_background"
                    android:layout_marginTop="@dimen/margin_start_vary_2"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
